<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="Theme.CuteGif" parent="Theme.Material3.Dark.NoActionBar">
    <item name="android:colorBackground">@color/light</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:textColor">@color/dark</item>
    <item name="android:textColorHighlight">@color/green_dark</item>
    <item name="android:textColorLink">@color/green_light</item>
    <item name="colorPrimary">@color/green_dark</item>
    <item name="colorOnPrimary">@color/dark</item>
    <item name="colorSecondary">@color/green_dark</item>
    <item name="colorOnSecondary">@color/dark</item>
    <item name="colorOnSurface">@color/dark</item>
    <item name="colorOutline">@color/dark</item>
    <item name="iconTint">@color/dark</item>
    <item name="android:statusBarColor">#191c19</item>
    <item name="colorSurfaceVariant">@color/grey</item>
  </style>


  <style name="Theme.CuteGif.Dialog" parent="Theme.Material3.Dark.Dialog.MinWidth">
    <item name="android:colorBackground">@color/light</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:textColor">@color/dark</item>
    <item name="android:textColorHighlight">@color/green_dark</item>
    <item name="android:textColorLink">@color/green_light</item>
    <item name="colorPrimary">@color/green_dark</item>
    <item name="colorOnPrimary">@color/dark</item>
    <item name="colorSecondary">@color/green_dark</item>
    <item name="colorOnSecondary">@color/dark</item>
    <item name="colorOnSurface">@color/dark</item>
    <item name="colorOutline">@color/dark</item>
    <item name="iconTint">@color/dark</item>
    <item name="windowNoTitle">true</item>
    <item name="android:statusBarColor">#191c19</item>
    <item name="dialogCornerRadius">8dp</item>
    <item name="colorSurfaceVariant">@color/grey</item>
  </style>

  <style name="Theme.CuteGif.MTVCustomMenuItem" parent="Theme.CuteGif">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:gravity">center</item>
    <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
  </style>


  <style name="Theme.CuteGif.SegmentedButton" parent="Widget.Material3.Button.OutlinedButton">
    <item name="android:colorBackground">@color/light</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:textColor">@color/dark</item>
    <item name="android:textColorHighlight">@color/green_dark</item>
    <item name="android:textColorLink">@color/green_light</item>
    <item name="colorPrimary">@color/green_dark</item>
    <item name="colorOnPrimary">@color/dark</item>
    <item name="colorSecondary">@color/green_dark</item>
    <item name="colorOnSecondary">@color/dark</item>
    <item name="colorOnSurface">@color/dark</item>
    <item name="colorOutline">@color/dark</item>
    <item name="iconTint">@color/dark</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:padding">0dp</item>
    <item name="cornerRadius">8dp</item>
    <item name="backgroundTint">@color/button_background_color_selector</item>
  </style>

  <style name="Theme.CuteGif.MRB.ColorPicker" parent="Theme.CuteGif">
    <item name="android:layout_gravity">center</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:checked">false</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>

  </style>

